<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar" />
    
    <style name="Theme.D1t" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.D1" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.D1dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.D1tranlucent" parent="android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="HomeButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TableRow">
        <item name="android:padding">0dip</item>
        <item name="android:background">@color/title_background</item>
        <item name="android:gravity">center_vertical</item> 
    </style>
    
    <style name="CellText">
        <item name="android:layout_margin">1dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@color/cell_background</item>
        <item name="android:width">0dip</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="TableHeaderText" parent="CellText">
        <item name="android:textColor">@color/table_header_text</item>
    </style>
    
    <style name="HintText">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:background">@color/title_background</item>
        <item name="android:paddingLeft">3dp</item>
    </style>
    
    <style name="LearnArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/background</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="LearnSpeaker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/background</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/button_volume</item>
        <item name="android:layout_gravity">center_vertical|right</item>
    </style>
    
    <style name="LearnVerbBlock">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    	<item name="android:orientation">horizontal</item>
    	<item name="android:padding">15dp</item>
    </style>
    
    <style name="LearnVerbTextBlock">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.9</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>    
    
    <style name="LearnVerbTextForm">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|left</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/learn_form_text</item>
    </style>
    
    <style name="LearnVerbTextTranscription">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
    </style>
    
    <style name="LearnVerbSplitter">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/block_splitter</item>
    </style>
    
    <style name="InfoLink">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/info_link_text</item>
    </style>
    
    <style name="ButtonAnswer">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    
    <style name="CounterAnswer">
    	<item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">5dp</item> 
    </style>
    
    <style name="LangButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/select_lang_item</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ButtonTrainTextAnswer">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="TrainTextFormTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TrainTextFormOriginal" parent="TrainTextFormTitle">
        <item name="android:textColor">@color/train_correct</item>
    </style>

    <style name="TrainTextFormAnswer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/train_key_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:minWidth">50dp</item>
    </style>

</resources>